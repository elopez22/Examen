@model Ramo
@{
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="@Url.Content("js/Controller/Busqueda.js")"></script>
}
<form asp-controller="CatalogoRama" asp-action="_BusquedaClave" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
    <section>
        <div class="row g-0">
            <div class="col-lg-12">
                <div class="align-self-center">
                    <input asp-for="Pais" value="" type="hidden" />
                    <div class="col-lg-6">
                        <label for="txtramo">ID</label>
                        <div class="input-group mb-4">
                            <input type="number" asp-for="Id" ID="txtaramaclave" class="form-control" placeholder="buscar clave" />
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <label for="txtramo">Rama</label>
                        <div class="input-group mb-4">
                            <input type="text" ID="txtramadesc" asp-for="Descripcion" class="form-control" placeholder="buscar descripción" />
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="input-group mb-4">
                            <Button ID="btnbuscar" onclick="this.disabled" type="submit" class="btn btn-primary w-100" Text="Buscar"> Buscar</Button>
                        </div>
                    </div>
                    <table id="tblView" class="display table" style="width:70%">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Id)</th>
                                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Html.DisplayFor(model => model.Id)</td>
                                <td>@Html.DisplayFor(model => model.Descripcion)</td>
                            </tr>
                        </tbody>
                    </table>
                    @Html.ActionLink("Regresar", "Index", "Busqueda")
                </div>
            </div>
        </div>
    </section>
</form>

